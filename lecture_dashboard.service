[Unit]
Description=FastCampus Lecture Dashboard
After=network.target mysql.service

[Service]
Type=simple
User=jennie
WorkingDirectory=/home/jennie/lecture_dashboard/backend
Environment="PATH=/home/jennie/lecture_dashboard/venv/bin"
Environment="ENVIRONMENT=dev"
ExecStart=/home/jennie/lecture_dashboard/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
